{
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/[route]?route=:path*"
    },
    {
      "source": "/api/admin/:path*",
      "destination": "/api/admin/[route]?route=:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/public/[route]?route=:path*"
    }
  ]
}
