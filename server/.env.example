# Database
DATABASE_URL=postgresql://user:pass@host/db

# JWT
JWT_SECRET=your-secret-key

# Mail (Brevo Transactional)
# Not: Admin panel "Mail Ayarları" sayfasından DB'ye de kaydedilebilir,
# ancak prod'da ENV üzerinden set etmek önerilir.
MAIL_ENABLED=true
MAIL_PROVIDER=brevo
BREVO_API_KEY=your-brevo-api-key
MAIL_SENDER_EMAIL=noreply@polithane.com
MAIL_SENDER_NAME=Polithane
MAIL_REPLY_TO_EMAIL=support@polithane.com
MAIL_REPLY_TO_NAME=Polithane Destek

# Email verification toggle (optional)
EMAIL_VERIFICATION_ENABLED=true

# Frontend URL
FRONTEND_URL=https://polithane.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudflare R2 (Optional - for media storage)
R2_ENDPOINT=https://xxxxx.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=polithane-media
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev
